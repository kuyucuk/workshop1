#include <iostream>

using namespace std;

int vize[10],final[10],notlar[10];


int main()
{
	
	cout<<"Notu 50 Ã¼zeri olan ogrenciler gecmistir, 50 alti olan ogranciler kalmistir."<<endl<<endl;
	
	for (int i=0;i<11;i++)
	{
		cout<<i+1<<". kisinin vize notunu giriniz: ";
		
		cin>>vize[i];
		
		cout<<i+1<<". kisinin final notunu giriniz: ";
		
		cin>>final[i];
		
		notlar[i]=(vize[i]+final[i])/2;
		
		
		
		cout<<i+1<<". kisinin ortalamasi: "<<notlar[i];
		
		if(notlar[i]<=50)
		cout<<" Kaldi"<<endl<<"--------------------------------"<<endl;
		if(notlar[i]>50)
		cout<<" Gecti"<<endl<<"--------------------------------"<<endl;
		
	}
	
	
	
	cout<<"Sinifin genel ortalamasi: "<<(notlar[0]+notlar[1]+notlar[2]+notlar[3]+notlar[4]+notlar[5]+notlar[6]+notlar[7]+notlar[8]+notlar[9]+notlar[10])/11;
	
	
}
